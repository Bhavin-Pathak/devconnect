{
    "openapi": "3.0.0",
    "info": {
        "version": "0.1.0",
        "title": "Devconnect API",
        "description": "A backend api repo that handles operation, storage and system integrity related to devconnect project"
    },
    "license": {
        "name": "MIT",
        "url": "https://opensource.org/licenses/MIT"
    },
    "host": "localhost:4001",
    "basePath": "/api/v1",
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],

    "paths": {
        "/user/register": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Creates a new user in the system",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            }
                        }
                    }
                }
            }
        }
    },

    "components": {
        "schemas": {
            "User": {
                "type": "object",
                "properties": {
                    "name": { 
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                }
            }
        }
    }
}